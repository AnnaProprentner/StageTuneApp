            android:textAppearance="@style/TextAppearance.AppCompat.Headline"



            />


        <Spinner
            android:id="@+id/spStringSelect"
            android:layout_width="50dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="25dp"

           />



